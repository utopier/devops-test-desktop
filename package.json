{
  "name": "devops-test-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "pre-electron-pack": "yarn build",
    "electron-pack": "electron-builder build --dir --windows --mac --linux"
  },
  "build": {
    "appId": "com.electron.todometer",
    "productName": "todometer",
    "copyright": "Copyright Â© 2020 @cassidoo",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/mac/icon.png.icns"
    },
    "win": {
      "icon": "assets/win/icon.png.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/png/256x256.png"
    },
    "files": [
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rescripts/cli": "0.0.14",
    "@rescripts/rescript-env": "0.0.12",
    "concurrently": "^5.3.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.3",
    "wait-on": "^5.2.0"
  },
  "rescripts": [
    "env"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.1",
    "emotion-reset": "^2.0.7",
    "react-router-dom": "^5.2.0",
    "rxjs": "^6.6.3"
  }
}
